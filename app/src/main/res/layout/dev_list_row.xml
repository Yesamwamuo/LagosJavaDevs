<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_padding_xtiny"
    android:layout_marginRight="@dimen/margin_padding_xtiny"
    android:layout_marginTop="@dimen/margin_padding_xtiny"
    android:padding="0dp"
    card_view:cardCornerRadius="@dimen/margin_padding_xtiny">

    <LinearLayout
        android:id="@+id/dev_list_row_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="@dimen/list_row_image_layout_size"
            android:layout_height="@dimen/list_row_image_layout_size"
            android:layout_margin="@dimen/margin_padding_xsmall">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_view_dev"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/dev_list_row_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear_layout_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/margin_padding_xsmall"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_xtiny">

            <TextView
                android:id="@+id/text_view_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_xxnormal"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/username" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>